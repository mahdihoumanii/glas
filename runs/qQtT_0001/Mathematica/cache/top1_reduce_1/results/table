    (ep/2 - ep^2/2 + s13/4 - (ep*s13)/4)/(ep - 2*ep^2 - (ep*s12)/4 + 
      (ep^2*s12)/2)}, BL[top1, {1, 0, -1, 1}] -> {0, s12/2}, 
  BL[top1, {1, 0, 0, 1}] -> {0, (1 - ep)/(1 - 2*ep)}, 

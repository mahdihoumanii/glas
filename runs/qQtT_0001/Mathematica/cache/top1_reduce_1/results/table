    ((3*ep)/4 - (3*ep^2)/2 - (ep*s12)/4 + (ep^2*s12)/2 + (ep*s13)/2 + 
      s13^2/4)/(ep - 2*ep^2 - (ep*s12)/4 + (ep^2*s12)/2)}, 
  BL[top1, {1, -1, 0, 1}] -> {0, (1/2 - ep + s13/2)/(1 - 2*ep)}, 
  BL[top1, {1, -1, 1, 0}] -> {0, (1/2 - ep + s13/2)/(1 - 2*ep)}, 
